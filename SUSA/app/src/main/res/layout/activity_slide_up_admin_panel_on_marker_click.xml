<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slideUpOnMarkerClickAdminPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/slide_up_panel_background"
    tools:context=".SlideUpPanel"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="Стадион Самара арена"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        tools:ignore="RtlCompat" />
    <Button
        android:id="@+id/editObject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Редактировать объект"/>

    <Button
        android:id="@+id/deleteObject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Удалить объект"/>

    <Button
        android:id="@+id/closeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Закрыть"/>


</LinearLayout>